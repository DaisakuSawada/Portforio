<% provide(:title, @user.name) %>
  <table class="col-md-6 col-md-offset-3 information">
    <tr>
      <th>名前</th>
      <th>入居中のSA</th>
      <th>部屋番号</th>
    </tr>
    <tr>
      <td><span><%= @user.name %></span></td>
      <td><span><%= @user.department %></span></td>
      <td><span><%= @user.room %></span></td>
    </tr>
  </table>


<table class="col-md-10 col-md-offset-1 menu_header center">
  <tr>
    <td class="col-md-4" style="background-color:#0077bb;">イベントスケジュール</td>
    <td class="col-md-4" style="background-color:#eeeeee;">プライベートボックス</td>
    <td class="col-md-4" style="background-color:#eeeeee;">冷蔵・冷凍庫内保管物</td>
  </tr>
</table>

<div class="col-md-10 col-md-offset-1 event_menu center">
  <table class="col-md-12 event_menu_header">
    <tr>
      
      <td>イベント名</td>
      <td>開催場所</td>
      <td>開催日程</td>
      <% if current_user.admin? %>
        <td>編集</td>
        <td>削除</td>
      <% else %>
        <td colspan="2">参加状況</td>
      <% end %>
      
    </tr>
    
    <% @events.each do |event| %>
    <tr>
      
      <td><%= event.eventname %></td>
      <td class="col-md-2"><%= event.place %></td>
      <td class="col-md-2"><%= l(event.eventday, format: :long) %></td>
      <td class="col-md-1"></td>
      <td class="col-md-1"><%= link_to "削除", {controller: "events", action: "destroy", id: event.id}, method: :delete,
          data: { confirm: "削除してよろしいですか？" },
          class: "btn btn-danger" %></td>
      
     
    </tr>
    <% end %>
  </table>
</div>

  <%= link_to "新規イベント登録", event_signup_path, remote: true, class: "col-md-10 col-md-offset-1 center new_event" %>

<!--モーダルウインドウ表示-->
<div id="event_signup" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
 
