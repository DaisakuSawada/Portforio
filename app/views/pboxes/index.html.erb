<% provide(:title) %>

  <table class="col-md-6 col-md-offset-3 information">
    <tr>
      <th>名前</th>
      <th>入居中のSA</th>
      <th>部屋番号</th>
    </tr>
    <tr>
      <td><span><%= @user.name %></span></td>
      <td><span><%= @user.department %></span></td>
      <td><span><%= @user.room %></span></td>
    </tr>
  </table>


<table class="col-md-12 menu_header center">
  <tr>
    <td class="col-md-4">
      <%= link_to "イベントスケジュール", {controller: "users", action: "show", id: @user.id}, local: true, class: "event_link" %>
    </td>
    <td class="col-md-4" style="background-color:#0077bb;">プライベートボックス</td>
    <td class="col-md-4" style="background-color:#eeeeee;">冷蔵・冷凍庫内保管物</td>
  </tr>
</table>

<div class="col-md-12 event_menu center">
  <table class="col-md-12 event_menu_header">
    <tr>
      <td>名前</td>
    </tr>
  </table>
</div>

<% if current_user.admin? %>
  <%= link_to "新規登録", {controller: "pboxes", action: "show", id: @user.id}, remote: true, class: "col-md-12 center new_event" %>
<% end %>
<!--モーダルウインドウ表示-->
<div id="show" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
 


