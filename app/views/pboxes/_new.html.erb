<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h2 class="modal-title">新規登録</h2>
    </div>
    
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          
          <%= form_with(model: @pbox, url: pbox_create_user_path(@user), local: true, method: :post) do |f| %>

            <%= f.label :"名前", class: "eventname" %>
            <%= f.text_field :pbox_name, class: "form-control" %>

          <%= f.submit "新規登録", class: "btn btn-primary btn-block signup" %>
          
          <% end %>
         
        </div>
      </div>
    </div>
    
    </div>
  </div>